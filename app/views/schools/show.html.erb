<h3 class="white center">School: </h3>
<div class="white center"><%= link_to(school.name, school, class:'button button-primary') %></div>

<h4 class="white center">Courses:</h4>
<% school.courses.each do |course| %>
  <div class="center"><%= link_to(course.name, course, class:'button back-white') %></div>
<% end %>

<% school.teachers.each do |teacher| %>
  <h4 class="white center">Teacher:</h4>
  <div class="center"><%= link_to(teacher.name, teacher, class:'button button-primary') %></div>
  <h5 class="white center">Students:</h5>
  <% teacher.students.each do |student| %>
    <div class="center"><%= link_to(student.name, student, class:'button back-white') %></div>
  <% end %>
<% end %>

<div class="white center">Teachers: <%= school.teachers.count %></div>
<div class="white center">Students:
  <% count = 0 %>
  <% school.teachers.each do |teacher| %>
    <% count += teacher.students.count %>
  <% end %>
  <%= count %>
</div>

<div class='changes'>
  <div class="center"><%= link_to 'Edit School', edit_school_path(school), class:"button back-white" %></div>
  <div class="center"><%= link_to 'Destroy School', school, method: :DELETE, data: { confirm: 'Are you sure?' }, class:"button back-white" %></div>
</div>

<div class='changes center'><%= link_to 'Back', root_path, class:"button back-white" %></div>
