<h3 class="center">Schools</h3>

<% if user_logged_in? %>
  <div class='center'><%= link_to "New School", new_school_path, class:'button back-white' %></div>
<% end %>

<% schools.each do |school| %>
  <div class="twelve columns center"><%= link_to(school.name, school, class: 'link button button-primary center') %></div>
<% end %>
